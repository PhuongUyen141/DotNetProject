@page "/challenge"
@inject ChallengeService challengeService

@if (list != null)
{
    <div class="container">
        <div class="row">
            @for (int i = 0; i < list.challengelist.Length; i++)
            {
                <ChallengeCard id="@list.challengelist[i].challengeId" title="@list.challengelist[i].title" content="@list.challengelist[i].description" />
            }
        </div>
    </div>
}


@code {
    private ChallengeCollection list;
    protected override async Task OnInitializedAsync()
    {
        this.list = await challengeService.getAllChallenge();
    }
}