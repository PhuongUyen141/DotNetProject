@inject NavigationManager navigationManager

<div class="card shadow">
    <div class="card-title font-semibold">
        @title
    </div>

    <div class="card-content">
        <div class="card-content-text">
            @content
        </div>

        <div class="card-content-btn">
            <button class="bg-blue-600 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded outline-none" @onclick="navigateToChallenge">Solve Challenge</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string title { get; set; }
    [Parameter]
    public string content { get; set; }

    [Parameter]
    public string id{get; set;}

    public void navigateToChallenge() {
        this.navigationManager.NavigateTo("/challenge/" + id, false);
    }
}